<?xml version="1.0" encoding="UTF-8"?>
<settings>

    <language id="com.asmike.actionscript3">
        <root-zone>sourcecode.as3</root-zone>
        <name>Actionscript 3</name>
        <detectors>
            <extension>as</extension>
        </detectors>
        
    </language>
	
	<language id="com.asmike.flex3">
        <root-zone>sourcecode.fx3</root-zone>
        <name>Flex 3 MXML</name>
        <detectors>
			<combo>
				<extension>mxml</extension>
				<match-content><![CDATA[<\?xml]]></match-content>
			</combo>
			<combo>
				<extension>mxml</extension>
				<match-content lines="3"><![CDATA[<mx:Application]]></match-content>
			</combo>
        </detectors>
        
    </language>
    
</settings> 

